{
    "swagger":"2.0",
    "info":{
       "version":"1.0.0",
       "title":"proTranslating test project",
       "description":"this project is build on top of MEVN",
       "license":{
          "name":"MIT",
          "url":"https://opensource.org/licenses/MIT"
       }
    },
    "host":"localhost:3000",
    "basePath":"/",
    "tags":[
       {
          "name":"home",
          "description":"API for clients"
       }
    ],
    "schemes":[
       "http"
    ],
    "consumes":[
       "application/json"
    ],
    "produces":[
       "application/json"
    ],
    "paths":{
       "/clients":{
          "get":{
             "tags":[
                "Clients"
             ],
             "summary":"Get all clients in the database",
             "responses":{
                "200":{
                   "description":"OK",
                   "schema":{
                      "$ref":"#/definitions/Clients"
                   }
                }
             }
          }
       },
       "/clients/create":{
          "post":{
             "tags":[
                "clients"
             ],
             "summary":"add a new client in the database",
             "description":"add a new client in the database",
             "parameters":[
                {
                   "name":"client",
                   "in":"body",
                   "description":"User that we want to add",
                   "schema":{
                      "$ref":"#/definitions/Client"
                   }
                }
             ],
             "produces":[
                "application/json"
             ],
             "responses":{
                "200":{
                   "description":"New client is successfully created",
                   "schema":{
                      "$ref":"#/definitions/Client"
                   }
                }
             }
          }
       }
    },
    "definitions":{
       "Client":{
          "required":[
             "name",
             "email",
             "phone"
          ],
          "properties":{
             "_id":{
                "type":"integer",
                "uniqueItems":true
             },
             "name":{
                "type":"string"
             },
             "email":{
                "type":"string"
             },
             "phone":{
                "type":"string"
             },
             "providers":{
                "type":"array",
                "items":{
                   "$ref":"#/definitions/Provider"
                }
             }
          }
       },
       "Clients":{
          "type":"array",
          "items":{
             "$ref":"#/definitions/Client"
          }
       }
    }
 }